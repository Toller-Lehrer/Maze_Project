{       
    "version": "0.2.0",       
    "configurations": [           
        {               
            "name": "C++ Launch",               
            "type": "cppdbg",               
            "request": "launch",               
            "program": "${Maze_Project}/your_program", // نام برنامه خروجی               
            "args": [],               
            "stopAtEntry": false,               
            "cwd": "${workspaceFolder}",               
            "environment": [],               
            "externalConsole": false,               
            "MIMode": "gdb",               
            "setupCommands": [                   
                {                       
                    "description": "Enable pretty-printing for gdb",                       
                    "text": "-enable-pretty-printing",                       
                    "ignoreFailures": true                   
                    }               
                    ],               
                    "preLaunchTask": "build",               
                    "miDebuggerPath": "/path/to/your/gdb", // مسیر GDB خود را وارد کنید               
                    "setupCommands": [                   
                        {                       
                            "text": "-enable-pretty-printing",                       
                            "description": "Enable pretty-printing for gdb",                       
                            "ignoreFailures": true                   
                        }
                    ]
        }
    ]
}